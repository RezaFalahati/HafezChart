@using Highsoft.Web.Mvc.Stocks
@using Highsoft.Web.Mvc.Stocks.Rendering;

@{
    ViewData["Title"] = "Herat Dollar Chart";
}

<link rel="stylesheet" type="text/css" href="https://code.highcharts.com/css/stocktools/gui.css">
<link rel="stylesheet" type="text/css" href="https://code.highcharts.com/css/annotations/popup.css">

<script src="http://code.highcharts.com/stock/highstock.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>

<script src="https://code.highcharts.com/stock/modules/data.js"></script>
<script src="https://code.highcharts.com/stock/modules/exporting.js"></script>
<script src="https://code.highcharts.com/stock/modules/export-data.js"></script>

<script src="https://code.highcharts.com/stock/indicators/indicators-all.js"></script>
<script src="https://code.highcharts.com/stock/modules/drag-panes.js"></script>

<script src="https://code.highcharts.com/modules/annotations-advanced.js"></script>
<script src="https://code.highcharts.com/modules/price-indicator.js"></script>
<script src="https://code.highcharts.com/modules/full-screen.js"></script>

<script src="https://code.highcharts.com/modules/stock-tools.js"></script>


@{
    var chartOptions = new Highstock
    {
        RangeSelector = new RangeSelector()
        {
            Buttons = new List<RangeSelectorButton>() {new RangeSelectorButton {Type = "all", Count = 1, Text = "All"}},
            InputEnabled = true,
            Selected = 1
        },
        Title = new Title
        {
            Text = "Tomorrow Herat Dollar"
        },
        Series = new List<Series>
        {
            new LineSeries
            {
                Data = ViewBag.TomorrowHeratDollarData as List<LineSeriesData>,
                Id = "tomorrowHeratDollar",
                Name = "TomorrowHeratDollar",
                TurboThreshold = 15000,
                Tooltip = new LineSeriesTooltip
                {
                    ValueDecimals = 0
                }
            }
        },
        PlotOptions = new PlotOptions
        {
            Series = new PlotOptionsSeries
            {
                TurboThreshold = 15000
            }
        },
        ID = "chart"
    };

    var renderer = new HighstockRenderer(chartOptions);
}

@Html.Raw(renderer.RenderHtml())

<p class="text-center">
    <a asp-controller="TomorrowHeratDollars" asp-action="Index" class="btn btn-primary">Load Data List</a>
</p>